{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "components": ["components"],
      "constants": ["constants"],
      "hooks": ["hooks"],
      "config": ["config"],
      "shared": ["shared"],
      "common": ["common"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
